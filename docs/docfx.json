{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [ "Bannerlord.UIExtenderEx/*.csproj" ]
        }
      ],
      "dest": "api",
      "filter": "filterConfig.yml"
    }
  ],
  "build": {
    "xref": [
      "xrefs/Newtonsoft.Json-xrefmap.yml",
      "https://butr.github.io/Bannerlord.ReferenceAssemblies.Documentation/xrefmap.yml"
    ],
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ],
    "content": [
      {
        "files": [ "**/**.{md,yml}" ],
        "exclude": [ "_site/**", "obj/**" ]
      }
    ],
    "resource": [
      {
        "files": [ "**/images/**", "codesnippet/**" ],
        "exclude": [ "_site/**", "obj/**" ]
      }
    ],
    "dest": "_site",
    "globalMetadata": {
      "_enableSearch": "true",
      "_appTitle": "UIExtenderEx Documentation",
      "_appName": "UIExtenderEx",
      "_appLogoPath": "images/logo.png",
      "_appFooter": "Â© 2020-2023 Bannerlord's Unofficial Tools & Resources",
    },
    "template": [
      "default",
      "modern",
      // https://github.com/dotnet/docfx/issues/8578
      // "_template/last-modified"
    ],
    "postProcessors": [
      "ExtractSearchIndex",
      // "LastModifiedPostProcessor"
    ]
  }
}
